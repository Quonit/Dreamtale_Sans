	elseif "5" _in_ talktime
	{
		aitalkinterval = 300
	}
	elseif "guess" _in_ TOLOWER(talktime)
	{
		aitalkinterval = 0
	}
	elseif "3" _in_ talktime
	{
		aitalkinterval = 180
	}
	else //every minute is just 'minute'
	{
		aitalkinterval = 60
	}
}